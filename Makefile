################################################################################################################################
# How to use this script
# make all # To compile all binary files
# make clean	# To remove all binary files and object
################################################################################################################################

################################################################################################################################
CC = gcc
CFLAGS = -Wall -Wextra -o2

TARGET = tf_series

SRC = tf_series.c
################################################################################################################################

################################################################################################################################
print_message: # This is printing a message as separate target.
	@echo "****************Starting Build****************"
################################################################################################################################

################################################################################################################################
all: $(TARGET)

$(TARGET): tf_series.o helper.o
	@echo "****************Started Building TF-Library****************"

	$(CC) $(CFLAGS) -o $(TARGET) tf_series.o helper.o

	@echo "****************TF-Library Build completed****************"

tf_series.o: tf_series.c
	$(CC) $(CFLAGS) -c tf_series.c -o tf_series.o

helper.o: serial.c serial.h
	$(CC) $(CFLAGS) -c serial.c -o helper.o
################################################################################################################################

################################################################################################################################
clean:
	@echo "Cleaning up..."
	rm -f $(TARGET).exe
################################################################################################################################

################################################################################################################################
print_message2:
	@echo "****************Build completed****************"
################################################################################################################################